<Window x:Class="List_note.Listado_Notas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:List_note"
        mc:Ignorable="d"
        Title="Listado_Notas" Height="550" Width="800">
    <Grid>
        <TextBlock Text="Lista de Notas" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="83,32,0,0"/>
        <TextBlock Text="Noriega Ramirez Joaquin Eduardo" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Margin="0,471,0,0"/>
        <ListView ItemsSource="{Binding Notas}" SelectedItem="{Binding NotaSeleccionada}" Margin="83,64,83,103">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="{Binding Color}">
                        <TextBlock Text="{Binding Titulo}" FontSize="16" Margin="10"/>                        
                        <Button Content="🗑" Command="{Binding DataContext.EliminarNotaCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,436,0,0">
            <Button Content="Agregar Nota" Click="GoToAgregarNota_click" Margin="5"/>
            <Button Content="Abrir" Click="EditarNota_Click" Margin="5"/>
            <Button Content="Importar Notas" Click="ImportarNotas_Click" Margin="5"/>
            <Button Content="Exportar Notas" Click="ExportarNotas_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
